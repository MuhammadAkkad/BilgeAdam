<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_last_msg_content"
                android:layout_width="255dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:text="@string/the_content_of_the_last_message"
                android:textColor="#727272"
                app:layout_constraintStart_toEndOf="@+id/img_sender"
                app:layout_constraintTop_toBottomOf="@+id/txt_sender_name" />

            <TextView
                android:id="@+id/txt_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/sender_name"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/img_sender"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_arrived_time"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="8dp"
                android:text="@string/arrived_time"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_sender"
                android:layout_width="78dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:contentDescription="@string/sender_img"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_friends"
                tools:srcCompat="@drawable/ic_friends" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_last_msg_content2"
                android:layout_width="255dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:text="@string/the_content_of_the_last_message"
                android:textColor="#727272"
                app:layout_constraintStart_toEndOf="@+id/img_sender2"
                app:layout_constraintTop_toBottomOf="@+id/txt_sender_name2" />

            <TextView
                android:id="@+id/txt_sender_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/sender_name"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/img_sender2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_arrived_time2"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="8dp"
                android:text="@string/arrived_time"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_sender2"
                android:layout_width="78dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:contentDescription="@string/sender_img"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_friends"
                tools:srcCompat="@drawable/ic_friends" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_last_msg_content3"
                android:layout_width="255dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:text="@string/the_content_of_the_last_message"
                android:textColor="#727272"
                app:layout_constraintStart_toEndOf="@+id/img_sender3"
                app:layout_constraintTop_toBottomOf="@+id/txt_sender_name3" />

            <TextView
                android:id="@+id/txt_sender_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/sender_name"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/img_sender3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_arrived_time3"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="8dp"
                android:text="@string/arrived_time"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_sender3"
                android:layout_width="78dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:contentDescription="@string/sender_img"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_friends"
                tools:srcCompat="@drawable/ic_friends" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>